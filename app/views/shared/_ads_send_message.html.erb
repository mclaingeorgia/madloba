<!-- 'Send message' text area -->
<% if !is_owning(ad) %>
    <div class="col-lg-12 ad-paragraph" xmlns="http://www.w3.org/1999/html">
      <!-- Send message to the ad publisher -->
      <%= form_tag '/ads/send_message', {class:'form-horizontal'} do %>
          <%= hidden_field_tag 'id', ad.id %>


          <fieldset>

            <div class="form-group" style="margin-left: 0px;">
              <%= label_tag :title, t('ad.send_message_label', name: publisher_name(ad)), class: 'control-label' %>
            </div>

            <div class="form-group">
              <%= label_tag 'message', t('ad.your_message'), class: 'col-lg-2 control-label' %>
              <div class="col-lg-6">
                <%= text_area_tag 'message', params['message'], rows: 8, class: 'form-control', style: 'padding-bottom: 20px;' %>
              </div>
            </div>

          </fieldset>

          <div class="form-actions">
            <div class="col-lg-8" style="text-align: right;">
                <% if current_user %>
                  <%= submit_tag(t('ad.send_message'), class: 'btn btn-success') %>
                <% else %>
                  <%= t('ad.log_in_to_send_html', login: (link_to t('session.sign_in').downcase, new_session_path(resource_name)), create: (link_to t('home.create_account'), new_registration_path(resource_name)))%>
                  <%= submit_tag(t('ad.send_message'), class: 'btn btn-default disabled') %>
                <% end %>
            </div>
          </div>
      <% end %>
    </div>
<% end %>