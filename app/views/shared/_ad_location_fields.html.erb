<!-- Item drop-down box and "Create a new item" button, in create/edit ad page -->
<div class="nested-fields ad-location-fields" style="padding-bottom: 10px;">
  <div class="location_from_list" style="display: inline;">
    <%= f.label :location_id, t('ad.select_new_location'), class: 'col-lg-3 control-label select-new-location', style: 'margin-top: -10px;' %>
    <%= f.select :location_id, options_from_collection_for_select(Location.where(user_id: current_user.id), 'id', 'full_address'), {}, {class: 'ad-location-select-list selectpicker', data: {live_search: 'true'}} %>
  </div>
  <%= link_to_add_association t('ad.create_location'), f, :location, partial: 'shared/location_form', class: 'btn btn-md btn-info ad-create-location', form_name: 'form',
                              render_options: {locals: {label_class: 'col-lg-3 control-label', col10: 'col-lg-10', col8: 'col-lg-8', col6: 'col-lg-6', col4: 'col-lg-4', col3: 'col-lg-3',
                                                        col2: 'col-lg-2', col_radio: 'col-lg-6', can_choose_existing_location: (current_user != nil && current_user.locations.length > 0)}} %>
  <%= link_to_remove_association 'Remove this location', f, class: 'btn btn-md btn-danger vert-align' %>

</div>
