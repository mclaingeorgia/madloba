-# Left-hand side: Services
%div
  %label.ad-label= t('admin.items')+':'
  %span
    %ul
      - @post.post_items.each do |post_item|
        %li= post_item.item.capitalized_name
-# Left-hand side: Categories
%div
  %label.ad-label= t('post.type_services')+':'
  %span
    %ul
      - @post.categories.each do |category|
        %li
          %span{:style => "color: #{MARKER_COLORS[category.marker_color]}"}= category.name
%br/
- @post.locations.each do |location|
  %div{:style => "margin-bottom: 20px;"}
    -# Where the service is
    %div
      %label.ad-label= t('post.where_to_find')
      %span= location.full_address
    -# Location description
    - if location.description && location.description != ''
      %div
        %label.ad-label= t('post.location_description')
        %span= location.description
    -# Left-hand side: Email
    - if contact_email_to_show(@post) != ''
      %div
        %label.ad-label
          = t('admin.users.email')
          \:
        %span= contact_email_to_show(@post)
    -# Left-hand side: Website
    - if location.website && location.website != ''
      %div
        %label.ad-label= t('post.location_website')
        %span
          %a{:href => "#{location.full_website_url}", :target => "_blank"}= location.website
    -# Left-hand side: Phone number
    - if location.phone_number && location.phone_number != ''
      %div
        %label.ad-label= t('location.phone_number')
        %span
          (+995) #{location.phone_number}
    -# Left-hand side: Additional phone numbers
    - if check_additional_phone_numbers(location)
      %div
        %label.ad-label= t('location.add_phone_number')
        %span
          (+995) #{check_additional_phone_numbers(location)}
    -# Left-hand side: Facebook page
    - if location.facebook && location.facebook != ''
      %div
        %label.ad-label= t('location.facebook')
        %span
          %a{:href => "#{location.facebook}", :target => "_blank"}= t('location.link_to_facebook')
