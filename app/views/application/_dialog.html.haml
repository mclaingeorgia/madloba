%dialog
  .dialog-content
    .dialog-close
      = link_to image_tag(asset_path("svg/close_modal.svg"), alt: t('.alt.close'), title: t('.alt.close')), 'javascript:void(0);'
    .dialog-page{'data-bind': 'about' }
      .header.about= @about_page.title
      .text
        = @about_page.content.html_safe
      .hr-wrapper
        .hr
      .header.partners= t('.partners')
      .partners-list
        = link_to image_tag(asset_path("svg/mac_color.svg"), alt: t('app.common.mac_alt'), title: t('app.common.mac_alt')).html_safe, "http://www.macgeorgia.org/", target: '_blank'
        = link_to image_tag(asset_path("svg/js_color.svg"), alt: t('app.common.js_alt'), title: t('app.common.js_alt')).html_safe, "https://jumpstart.ge/#{I18n.locale}", target: '_blank'
    .dialog-page{ 'data-bind': 'contact' }
      .header= t('.contact')
      .boxes
        .box.info
          .name= t('.org')
          .info-item
            %p
              = image_tag(asset_path("svg/address.svg"), alt: t('.alt.address'), title: t('.alt.address'))
              %span= t('.address')
              = t('.address_content')
          .info-item
            %p
              = image_tag(asset_path("svg/phone.svg"), alt: t('.alt.phone'), title: t('.alt.phone'))
              %span= t('.phone')
              = t('.phone_content')
          .info-item
            %p
              = image_tag(asset_path("svg/email.svg"), alt: t('.alt.email'), title: t('.alt.email'))
              %span= t('.email')
              = t('.email_content')
        .box.map-point
          .map-box.map-container
            #contact_map.map
            .map-zoomer
              .in{'data-map': 'contact_map'} +
              .hr
              .out{'data-map': 'contact_map'} âˆ’
    - if @has_place_report_dialog
      .dialog-page{'data-bind': 'place_report' }
        .header= t('.report', name: @place_name)
        .form
          %textarea#place_report_reason{rows: 10, placeholder: t('.report_placeholder')}
          %button#place_report_send
            = t('.report_button')
          %a#place_report_link.hidden{'data-href-template': @place_report_href, 'data-xhr': 'report', 'data-xhr-format': 'json'}
    - if @has_place_ownership_dialog
      .dialog-page{'data-bind': 'place_ownership' }
        .header= t('.ownership', name: @place_name)
        -#
          .form
            = 'Providers:'
            = 'New Provider'
            = 'New Provider Name'
            = 'New Provider Description'
            = 'Take Ownership'
              %textarea#place_ownership_reason{rows: 10, placeholder: t('.ownership_placeholder')}
              %button#place_ownership_send
                = t('.ownership_button')
              %a#place_ownership_link.hidden{'data-href-template': @place_report_href, 'data-xhr': 'ownership', 'data-xhr-format': 'json'}

        .form-container
          %form{action: manage_place_ownership_path, method: :post, 'data-remote': true, id: 'invisible-recaptcha-form', class: 'simple_form light column'}
            = hidden_field_tag :authenticity_token, form_authenticity_token
            .field-wrapper
              %label.field-label Pick existing provider
              = collection_select(:ownership, :provider_id, current_user.providers.accessible, :id, :name, prompt: true)
            .or Or
            = simple_fields_for :provider_attributes, Provider.new do |provider_form|
              = render partial: 'shared/fields_localization', locals: { fields: { name: nil, description: { as: :text, input_html: { required: true, rows: 6 } } } , form: provider_form }
            .actions
              %input{type: :submit, name: 'commit', value: 'Take Ownership'}
          -#
              .field-wrapper
                %label.field-label{for: 'message_sender'}
                  =t('.your_name')
                  %abbr{title: 'required'} *
                %input.field-input{type: 'text', name: 'message[sender]', id: 'message_sender'}
              .field-wrapper
                %label.field-label{for: 'message_email'}
                  =t('.your_email')
                  %abbr{title: 'required'} *
                %input.field-input{type: 'email', name: 'message[email]', id: 'message_email'}
              .field-wrapper
                %label.field-label{for: 'message_text'}
                  =t('.your_message')
                  %abbr{title: 'required'} *
                %textarea.field-input{rows: 8, name: 'message[text]', id: 'message_text'}
              .actions
                =# invisible_recaptcha_tags callback: 'submitInvisibleRecaptchaForm', text: t('.send'), badge: 'inline', hl: I18n.locale
