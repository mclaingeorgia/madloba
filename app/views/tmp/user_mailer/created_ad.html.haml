!!!
%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
  %body
    %strong
      - if @user[:name]
        = t('mailer.dear', name: @user[:name])
      - else
        = t('session.hello')
    %p
      = t('mailer.post_created', site_name: @site_name)
    %ul
      %li
        = t('mailer.post_title')
        \: #{@post.title}
      %li
        = t('post.legal_form')
        \: #{@post.legal_form}
      %li
        = t('admin.items')
        %ul
          - @post.items.each do |item|
            %li= item.name.capitalize
      %li
        = t('admin.categories')
        %ul
          - @post.categories.each do |cat|
            %li= cat.name
      %li
        = t('admin.locations')
        \:
        %ul
          - @post.locations.each do |location|
            %li= location.name_and_or_full_address
      %li
        = t('post.beneficiaries_age_group')
        \: #{@post.benef_age_group}

    %p
      = t('mailer.description')
      \: #{simple_format(@post.description)}
    %hr/

    - if !@user[:is_anon]
      %p
        = t('mailer.manage_post_html', :admin_panel => link_to(t('mailer.admin_panel'), @full_admin_url))
    %p
      = t('mailer.thanks')
      %br/
      = t('mailer.signature', name: @site_name)
