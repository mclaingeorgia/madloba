.container#results_page
  .col-xs-12.col-md-offset-2.col-md-8

    .summary
      = t('results.title', area: @area.name, num: @posts.count)

    %hr

    .results
      - @posts.each do |post|
        .result
          .ad-title= link_to post.title, post
          .ad-address
            %i.fa{class: post.location.area? ? Location::AREA_ADDRESS_ICON : Location::EXACT_ADDRESS_ICON}
            = post.location.full_address

          .ad-items= "#{post.action} #{colored_items_for(post)}".html_safe
          .ad-description= short_description_for(post.description)

    .madloba-pagination
      = will_paginate @posts, container: false
