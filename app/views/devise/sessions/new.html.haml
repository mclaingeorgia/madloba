- translate_path = 'admin.user.'
.nav-sign-in-form
  = form_for resource, as: resource_name, url: session_path(resource_name, :post_url => @post_url), remote: true, html: { role: 'form', class: 'fields' } do |f|
    = render_form_field(:email_field, f, :email, translate_path, { autofocus: true }, { class: 'email' })

    .field.password
      = f.label :password do
        = t("#{translate_path}.password_field")
        = link_to t("#{translate_path}.forgot"), new_password_path(resource_name), class: 'forgot reattach'
      = f.password_field :password, class: 'value', autocomplete: 'off'


    .field.remember-me
      %label
        = f.check_box :remember_me
        = f.label :remember_me do
          %i
          = t("#{translate_path}.remember_me")
    .actions
      .action-group
        = submit_tag(t("#{translate_path}.sign_in"), { :type => "submit" })
        = submit_tag(t('admin.cancel'), { :type => "reset" })
      %p
        %span=t('admin.or')
        = link_to t("#{translate_path}.sign_up"), new_registration_path(resource_name), class: 'sign_up'
        %span=t("#{translate_path}.sign_up_prompt")
