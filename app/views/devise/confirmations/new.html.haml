- translate_path = 'admin.user.'
.devise-form{ class: @page_type }
  = form_for resource, as: resource_name, url: confirmation_path(resource_name), remote: true, html: { method: :post, role: 'form', class: 'fields', :'data-type' => 'json' } do |f|
    .header= t('confirmation.resend')
    = devise_error_messages!
    = render_form_field(:email_field, f, :email, translate_path, { autofocus: true }, { class: 'email' })
    .actions
      .action-group
        = submit_tag(t("confirmation.resend"), { :type => "submit" })
        = submit_tag(t('admin.cancel'), { :type => "reset" })

