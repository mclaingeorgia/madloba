!!!
%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
  %body
    %strong
      - if @user[:name]
        = t('mailer.dear', name: @user[:name])
      - else
        = t('session.hello')
    %p
      = t('mailer.ad_created', site_name: @site_name)
    %ul
      %li
        = t('mailer.ad_title')
        \: #{@ad.title}
      %li
        = t('ad.legal_form')
        \: #{@ad.legal_form}
      %li
        = t('admin.items')
        %ul
          - @ad.items.each do |item|
            %li= item.name.capitalize
      %li
        = t('admin.categories')
        %ul
          - @ad.categories.each do |cat|
            %li= cat.name
      %li
        = t('admin.locations')
        \:
        %ul
          - @ad.locations.each do |location|
            %li= location.name_and_or_full_address
      %li
        = t('ad.beneficiaries_age_group')
        \: #{@ad.benef_age_group}
    %p
      = t('mailer.description')
      \: #{simple_format(@ad.description)}
    %hr/
    - if !@user[:is_anon]
      %p
        = t('mailer.manage_ad_html', :admin_panel => link_to(t('mailer.admin_panel'), @full_admin_url))
    %p
      = t('mailer.thanks')
      %br/
      = t('mailer.signature', name: @site_name)
