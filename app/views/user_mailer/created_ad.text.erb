<% if @user[:name] %>
    <%= t('mailer.dear', name: @user[:name]) %>
<% else %>
    <%= t('session.hello') %>
<% end %>

<%= t('mailer.ad_created', site_name: @site_name) %>:

<%= t('mailer.ad_title') %>: <%= @ad.title %>

<%= t('ad.legal_form') %>: <%= @ad.legal_form %>

<%= t('admin.items') %>
<% @ad.items.each do |item| %>
    - <%= item.name %>
<% end %>

<%= t('admin.categories') %>
<% @ad.categories.each do |cat| %>
    - <%= cat.name %>
<% end %>

- <%= t('ad.beneficiaries_age_group') %>: <%= @ad.benef_age_group %>

<%= t('location.location') %>:
<% @ad.locations.each do |location| %>
    - <%= location.name_and_or_full_address %>
<% end %>


<%= t('mailer.description') %>: <%= simple_format(@ad.description) %>

------------------------------------------------

<%= t('mailer.manage_ad_html', :admin_panel => link_to(t('mailer.admin_panel'), @full_admin_url)) %>

<%= t('mailer.ad_will_expire', day_number: @max_expire_days , expire_date: @ad.expire_date ) %>

<%= t('mailer.thanks') %>

<%= t('mailer.signature', name: @site_name) %>
