<div class="container devise-section">

  <div class="row">

    <div class="col-lg-8">

      <%= devise_error_messages! %>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), :html => {:class => 'form-horizontal'}) do |f| %>
          <fieldset>
            <legend>Sign up</legend>

            <div class="form-group">
              <div class="col-lg-9 col-lg-offset-3">
                <%= t('registration.all_mandatory') %>
              </div>
            </div>

            <!-- First name -->
            <div class="form-group">
              <%= f.label :first_name, t('registration.first_name')+':', class: 'col-lg-3 control-label' %>
              <div class="col-lg-9">
                <%= f.text_field :first_name, class: 'form-control', autofocus: true %>
              </div>
            </div>

            <!-- Last name -->
            <div class="form-group">
              <%= f.label :last_name, t('registration.last_name')+':', class: 'col-lg-3 control-label' %>
              <div class="col-lg-9">
                <%= f.text_field :last_name, class: 'form-control' %>
              </div>
            </div>

            <!-- Username -->
            <div class="form-group">
              <%= f.label :username,t('registration.username')+':', class: 'col-lg-3 control-label' %>
              <div class="col-lg-9">
                <%= f.text_field :username, class: 'form-control help-message',
                                 :data => {:content => t('registration.username_help'), :placement => 'right',
                                           :toggle => 'popover', :trigger => 'hover focus'} %>
              </div>
            </div>

            <!-- E-mail -->
            <div class="form-group">
              <%= f.label :email, t('registration.email')+':', class: 'col-lg-3 control-label' %>
              <div class="col-lg-9">
                <%= f.email_field :email, class: 'form-control' %>
              </div>
            </div>

            <!-- Password -->
            <div class="form-group">
              <%= f.label :password, t('registration.password')+':', class:'col-lg-3 control-label' %>
              <div class="col-lg-9">
                <%= f.password_field :password, class: 'form-control', autocomplete: "off" %>
              </div>
            </div>

            <!-- Confirm password -->
            <div class="form-group">
              <%= f.label :password_confirmation, t('registration.password_confirm')+':', class: 'col-lg-3 control-label' %>
              <div class="col-lg-9">
                <%= f.password_field :password_confirmation, class: 'form-control', autocomplete: "off" %>
              </div>
            </div>

            <!-- Do you plan to register service? yes/no -->
            <div class="form-group">
              <%= f.label :is_service_provider, t('registration.register_service'), class: 'col-lg-3 control-label' %>
              <div class='col-lg-9'>
                <div class="radio">
                  <label>
                    <%= f.radio_button :is_service_provider, true, value: true %>
                    <%= t('home.yes') %>
                  </label>
                </div>
                <div class="radio">
                  <label>
                    <%= f.radio_button :is_service_provider, false, value: false, checked: true %>
                    <%= t('home.no') %>
                  </label>
                </div>
              </div>
            </div>

            <div class="form-group">
              <div class="col-lg-9 col-lg-offset-3">
                <%= f.submit t('registration.sign_up'), class: 'btn btn-primary' %>
              </div>
            </div>

            <!-- Note about checking out the FAQ -->
            <div class="form-group">
              <div class="col-lg-9 col-lg-offset-3">
                <i><%= t('errors.have_questions_html', link: (link_to t('errors.faq_label'), faq_path, target: '_blank')) %></i><br /><br />
              </div>
            </div>

          </fieldset>

      <% end %>
    </div>
  </div>

  <%= render 'shared/links' %>

</div>

<div id="push"></div>
<!--  /.container -->
