- title = t('admin.places.manage')
- page_title title
= render partial: 'shared/breadcrumbs', locals: { paths: [title], buttons: [['places.add', new_manage_place_path, 'add']] }
.table-view
  %table.datatable.datatable-table.table-responsive{width: '100%'}
    %thead
      %tr
        %th.spacer
        %th= @model.human_attribute_name(:name)
        %th.fill= @model.human_attribute_name(:address)
        %th.fill= @model.human_attribute_name(:city)
        %th.fill= @model.human_attribute_name(:region)
        %th.fill= @model.human_attribute_name(:emails)
        %th.fill= @model.human_attribute_name(:website)
        %th.actions= t('admin.shared.actions')
    %tbody
      - @items.each do |item|
        %tr
          %td
          %td= item.name
          %td= item.address
          %td= item.city
          %td= item.region.name
          %td= item.email
          %td= item.website
          %td.actions
            = link_to t('admin.edit'), edit_manage_place_path(item.id), class: 'edit'
            - if item.deleted?
              = link_to t('admin.shared.restore'), restore_manage_place_path(item.id), method: :patch, class: 'restore btn', data: {confirm: t('admin.places.confirm_restore') }
            - else
              = link_to t('admin.shared.delete'), manage_place_path(item.id), method: :delete, class: 'delete', data: {confirm: t('admin.places.confirm_delete') }
